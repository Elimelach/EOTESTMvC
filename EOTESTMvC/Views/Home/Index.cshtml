@{
    ViewData["Title"] = "Home Page";
    bool isAuth =(string) ViewData["isAuth"] == "True" ? true : false;
    string action = isAuth ? "Load" : "InitiateAuth";
    string massege = isAuth ? "Load Account" : "Authorize Account";
}

<div class="text-center">
    <h1 class="display-4">Welcome To Your Account</h1>
</div>
<div class="row">
    <div class="col-2 col-sm-8 offset-sm-2 offset-5 text-center"> <a class="btn btn-primary" asp-action="@action">@massege</a></div>
    @{ 
        if (isAuth)
        {
            <div class="col-2 offset-3 col-sm-8 offset-sm-2 text-center">
                <a asp-action="CancelAuth"class="btn btn-outline-primary">Cancel Authorization</a>
            </div>
        }
    }
</div>

